---
import { NAVIGATION, SITE_META } from "~/consts";
import HeaderLink from "./HeaderLink.astro";
import MobileNav from "./MobileNav.astro";
import ThemeSwitcher from "./ThemeSwitcher.astro";
---

<header class="flex items-center justify-between py-10">
  <div>
    <a href="/" aria-label={SITE_META.headerTitle}>
      <div class="flex items-center justify-between">
        <div class="h-6 text-2xl font-semibold">{SITE_META.headerTitle}</div>
      </div>
    </a>
  </div>
  <div class="flex items-center space-x-4 leading-5 sm:space-x-6">
    {
      NAVIGATION.filter((link) => link.href !== "/").map((link) => (
        <HeaderLink href={link.href} class="hidden font-medium text-gray-900 dark:text-gray-100 sm:block">
          {link.title}
        </HeaderLink>
      ))
    }

    <ThemeSwitcher />
    <MobileNav />
  </div>
</header>
